{
  "name": "@tap2-wallet/backend",
  "version": "1.0.0",
  "description": "Tap2 Wallet Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "build": "tsc",
    "start": "wrangler dev",
    "deploy": "wrangler deploy",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:local": "wrangler d1 execute tap2-wallet-db --local --command",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.0",
    "@noble/hashes": "^2.0.1",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.0",
    "jose": "^6.1.3",
    "otpauth": "^9.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.27.0",
    "eslint": "^8.57.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18",
    "wrangler": "^3.94.0"
  }
