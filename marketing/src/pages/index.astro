    <!-- CTA Section -->
    <section id="download" class="cta">
      <div class="container">
        <div class="cta-content animate-scale-in">
          <h2 class="cta-title">Ready to transform how you pay?</h2>
          <p class="cta-text">Join over 2 million users who have already made the switch. Download Tap2 Wallet today.</p>

          <div class="cta-buttons">
            <a href="https://apps.apple.com/app/tap2-wallet" class="btn-apple" aria-label="Download on App Store">
