# Tap2 Wallet - Mobile App Environment Variables

# API Configuration
# The base URL for the backend API
EXPO_PUBLIC_API_URL=http://localhost:8787

# Environment
EXPO_PUBLIC_ENVIRONMENT=development

# Feature Flags
EXPO_PUBLIC_ENABLE_NFC=true
EXPO_PUBLIC_ENABLE_BIOMETRICS=true
EXPO_PUBLIC_ENABLE_CAMERA=true

# Auth0 Configuration (to be configured)
# Get these from your Auth0 application
EXPO_PUBLIC_AUTH0_DOMAIN=your-tenant.auth0.com
EXPO_PUBLIC_AUTH0_CLIENT_ID=your-client-id
EXPO_PUBLIC_AUTH0_AUDIENCE=your-api-identifier

# Sentry (for error tracking)
# Leave empty to disable
EXPO_PUBLIC_SENTRY_DSN=

# Analytics (Mixpanel, etc.)
# Leave empty to disable
EXPO_PUBLIC_MIXPANEL_TOKEN=

# App Configuration
EXPO_PUBLIC_APP_NAME=Tap2 Wallet
EXPO_PUBLIC_CURRENCY=USD
EXPO_PUBLIC_MIN_PAYMENT_AMOUNT=100
EXPO_PUBLIC_MAX_PAYMENT_AMOUNT=100000

# Build Configuration
# These are set by Expo EAS during build
EXPO_PUBLIC_BUILD_VERSION=1.0.0
EXPO_PUBLIC_BUILD_NUMBER=1

# Development Settings
EXPO_PUBLIC_DEV_MODE=true
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug
